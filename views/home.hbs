{{#if removedItem}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    Item foi Removido
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6">
    <h1>Itens</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/additem" type="button" class="btn btn-primary align-self-center">+ Adicionar Item</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nome</th>
      <th scope="col">Quantidade</th>
      <th scope="col" class="text-end">Ação</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.nome}}</td>
      <td>{{this.quantidade}}</td>
      <td class="text-end">
          <a href="/edititem/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Editar</a>
          <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Apagar</a>
          <a href="/historico" type="button" class="btn btn-light btn-small"><i class="bi bi-bag-check"></i> Comprar</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>