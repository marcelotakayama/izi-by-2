{{#if removedItemHistorico}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    Item foi Removido do Histórico
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<h1>Histórico</h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Histórico</li>
  </ol>
</nav>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Comprado em</th>
      <th scope="col">Nome</th>
      <th scope="col">Quantidade</th>
      <th scope="col" class="text-end">Ação</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.buyed_at}}</td>
      <td>{{this.nome}}</td>
      <td>{{this.quantidade}}</td>
      <td class="text-end">
          <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Apagar</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>